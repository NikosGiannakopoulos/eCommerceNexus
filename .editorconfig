root = true

# C# files
[*.cs]
# Indentation style
indent_style = space
indent_size = 4

# End of line
end_of_line = crlf
# Charset for files
charset = utf-8

# Do not insert a final newline at the end of the file
insert_final_newline = false
# Trim any trailing whitespace when saving
trim_trailing_whitespace = true

# Space between methods, fields, properties, etc.
csharp_space_between_method_declaration_parameter_list_parenthesis = true
csharp_space_before_method_declaration_opening_parenthesis = true
csharp_space_after_cast = true

# Use `var` when the type is evident from the right-hand side of the assignment
csharp_style_var_for_builtin_types = true
csharp_style_var_when_type_is_apparent = true

# Other settings for C# code style (adjust as needed)
dotnet_sort_system_directives_first = true
csharp_new_line_before_members = true
csharp_indent_braces = false
csharp_indent_case_labels = false
csharp_indent_labels = block

# For all other files (adjust these for other file types if needed)
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

[*.{html,css}]
indent_style = space
indent_size = 2

# Markdown files (optional)
[*.md]
trim_trailing_whitespace = false

# JSON files (optional)
[*.json]
indent_style = space
indent_size = 2

# YAML files (optional)
[*.yml]
indent_style = space
indent_size = 2